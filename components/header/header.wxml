<view class="header" style="background:{{background_color}}">
  <view class="status" style="height:{{status_height}}px"></view>
  <view class="header-nav" style="height:{{nav_height}}px;">
    <view class="title-nav">{{title}}</view>
    <block wx:if="{{!show_back}}">
      <view class="userAvatarUrl" bindtap="_navgatorUser">
        <open-data type="userAvatarUrl"></open-data>
      </view>
    </block>
    <block wx:if="{{show_back}}">
      <view class="back-nav" hover-class='hover' bindtap="_navgatorBack"><image src="data:image/png;base64,"></image></view>
    </block>
  </view>
</view>
