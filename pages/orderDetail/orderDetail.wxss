.productInfo{
  width:calc(100% - 40rpx);
  margin:0 auto;
  background:#fff;
  padding:20rpx 0;
}
.order-store-logo{
  width:140rpx;
  height:140rpx;
  border-radius:50%;
  overflow: hidden;
  margin:0 auto;
  box-sizing: border-box;
  position:relative;
}
.order-store-logo>image{
  position:absolute;
  top:50%;
  left:50%;
  -webkit-transform: translate(-50%,-50%);
  -o-transform: translate(-50%,-50%);
  -moz-transform: translate(-50%,-50%);
  -ms-transform: translate(-50%,-50%);
  transform: translate(-50%,-50%);
}
.orderDetail-status{
  font-size:36rpx;
  text-align: center;
  line-height:32px;
}
.orderDetail-btn{
  width:85px;
  height:28px;
  background:#57bead;
  color:#fff;
  line-height:28px;
  text-align: center;
  border-radius:4px;
  font-size:26rpx;
}
.ordercancle-btn{
  width:85px;
  height:28px;
  background:#fff;
  color:#333;
  line-height:28px;
  text-align: center;
  border-radius:4px;
  font-size:26rpx;
  border:1px solid #333;
  margin-left:10px;
}
.store-logo{
  width:36rpx;
  height:36rpx;
  border-radius:50%;
  overflow:hidden;
  margin-right:10rpx;
}
.orderDetail-products{
  padding:0 20rpx;
  padding-top:3px;
  border-top:1px solid #f3f3f3;
}
.order-list{
  border-top:1px solid #f3f3f3;
  padding-top:3px;
  border-bottom:5px double #f3f3f3;
}
.order-list-price{
  width:170rpx;
  text-align: right;
}
.shipInfo{
  width:calc(100% - 40rpx);
  margin:20rpx auto;
  background:#fff;
}
.clearfix:before,.clearfix:after{
  content:'';
  display:block;
  width:0;
  height:0;
  overflow:hidden; 
  clear:both;
}
.fl{float:left;}
.fr{float:right;}
.bt1{
  border-bottom:1px solid #f3f3f3;
}
.pv{
  padding:20rpx 0;
}
.btn-container{
  display:-webkit-flex;
  display:flex;
  justify-content: center;
  align-items: center;
  margin-bottom:10px;
}